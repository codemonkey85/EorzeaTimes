<PageTitle>
    @(ShowTimeInTitle ? $"ET: {EorzeaTimeString}" : "Eorzea Time")
</PageTitle>

<MudText Typo="@Typo.h3">
    Eorzea time:
</MudText>

<MudText Typo="@Typo.h3">
    @EorzeaTimeString
</MudText>

<MudSwitch @bind-Value="@UseMilitaryTime"
           Label="Use 24-hour time"
           Color="Color.Primary" />

<MudSwitch @bind-Value="@ShowTimeInTitle"
           Label="Show time in title"
           Color="Color.Primary" />
